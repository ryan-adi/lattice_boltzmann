<data caseName="channel2d">
    <SimSetting>
        <fps type="int">10</fps>
        <export type="int">100</export>
        <dt type="float">1.0</dt>
        <endTime type="float">2000.0</endTime>
        <removePng type="int">1</removePng>
    </SimSetting>

    <Geometry>
        <lx type="float">1.0</lx>
        <ly type="float">1.0</ly>
        <nx type="int">300</nx>
        <ny type="int">100</ny>
    </Geometry>

    <!-- <Obstacle>
        <shape type="str">circle</shape>
        <radius type="int">10</radius>
        <center type="np.array" number="int">25 50</center>
    </Obstacle> -->
    
    <Fluid>
        <viscosity type="float">0.002</viscosity>
        <speedOfSound type="float">0.577</speedOfSound> <!-- c=dx/dt=1; cs=c/sqrt(3)-->
        <density type="float">1.0</density>
        <dt type="float">1.0</dt>
        <relaxationTime type="float">.55</relaxationTime>
    </Fluid>

    <InitialConditions>
        <velocity type="np.array" number="float">0.2 0.0</velocity>
        <density type="float">1.0</density>
        <random type="int">0</random>
    </InitialConditions>

    <BoundaryConditions>
        <corner type="int">1</corner>
        <left type="none"></left>
        <right type="none"></right>
        <top type="velocity">0.0 0.0</top>
        <bottom type="velocity">0.0 0.0</bottom>
    </BoundaryConditions>

    <Visualization>
        <figSize type="np.array" number="int">40 10</figSize>
        <fontSize type="int">30</fontSize>
        <cmap type="str">coolwarm</cmap>
    </Visualization>
</data>